@using MudBlazor

<TitleContent>
    <MudText Typo="Typo.h6">Update Match Score</MudText>
</TitleContent>
<DialogContent>
    <EditForm Model="@_viewModel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <MudNumericField @bind-Value="_viewModel.Score1" Label="Player 1 Score" Variant="Variant.Outlined" Min="0" Class="mb-3" />
        <MudNumericField @bind-Value="_viewModel.Score2" Label="Player 2 Score" Variant="Variant.Outlined" Min="0" Class="mb-3" />
        <MudAlert Severity="Severity.Info" Class="mb-3">
            Note: Scores cannot be equal. One player must win.
        </MudAlert>
        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="@_isSaving">
            @if (_isSaving)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Updating...</MudText>
            }
            else
            {
                <MudText>Update Score</MudText>
            }
        </MudButton>
        <MudButton ButtonType="ButtonType.Button" Variant="Variant.Text" Color="Color.Default" OnClick="Cancel" Class="ms-2">
            Cancel
        </MudButton>
    </EditForm>
</DialogContent>
